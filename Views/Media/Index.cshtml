@model IEnumerable<PhotoHub.Models.Media>

@{
    ViewData["Title"] = "Index";
}

<h1>Media</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateUpload)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MediaDiscription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpload)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediaDiscription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MediaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MediaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MediaId">Delete</a> |
                <a asp-action="Download" asp-route-id="@item.MediaId">Download</a>
            </td>
        </tr>
}
    </tbody>
</table>
